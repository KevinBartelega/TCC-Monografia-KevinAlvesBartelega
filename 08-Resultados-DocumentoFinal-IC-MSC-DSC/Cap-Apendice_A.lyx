\begin_layout Standard
A derivada da força gravitacional 
\begin_inset Formula $\left(F_{G}\right)$
\end_inset

 em relação à altura do reboco é nula:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
F_{G}=\left(\rho_{s}-\rho_{f}\right)\frac{4}{3}\pi r_{s}^{3}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{dF_{G}}{dh_{c}}=0
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
A derivada da força de arrasto 
\begin_inset Formula $\left(F_{D}\right)$
\end_inset

 é dada por:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
F_{D}=4\pi r_{s}^{2}\tau_{w}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dF_{D}}{dh_{c}}=4\pi r_{s}^{2}\frac{d\tau_{w}}{dh_{c}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\tau_{w}=\eta\gamma_{w}^{n}\;\;\Rightarrow\;\;\frac{d\tau_{w}}{dh_{c}}=\eta n\gamma_{w}^{n-1}\frac{d\gamma_{w}}{dh_{c}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\gamma_{w}=\frac{\left(4+\frac{2}{n}\right)q}{\left(\epsilon-h_{c}\right)^{2}D}\;\;\Rightarrow\;\;\frac{d\gamma_{w}}{dh_{c}}=\frac{\left(4+\frac{2}{n}\right)q}{D}\left(-2\right)\left(\epsilon-h_{c}\right)^{-3}\left(-1\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{d\gamma_{w}}{dh_{c}}=2\left[\frac{\left(4+\frac{2}{n}\right)q}{D\left(\epsilon-h_{c}\right)^{2}}\right]\frac{1}{\left(\epsilon-h_{c}\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{d\gamma_{w}}{dh_{c}}=2\frac{\gamma_{w}}{\epsilon-h_{c}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{d\tau_{w}}{dh_{c}}=\eta n\gamma_{w}^{n-1}\left[2\frac{\gamma_{w}}{\epsilon-h_{c}}\right]\;\;\Rightarrow\;\;\frac{d\tau_{w}}{dh_{c}}=2n\frac{\tau_{w}}{\epsilon-h_{c}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dF_{D}}{dh_{c}}=4\pi r_{s}^{2}\left[2n\frac{\tau_{w}}{\epsilon-h_{c}}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
Portanto, pode ser escrita em função da própria força ou de todas a variáveis:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{cases}
\frac{dF_{D}}{dh_{c}}=F_{D}\frac{2n}{\epsilon-h_{c}}\\
\frac{dF_{D}}{dh_{c}}=\frac{8\pi r_{s}^{2}n\eta}{\epsilon-h_{c}}\left[\frac{\left(4+\frac{2}{n}\right)q}{\left(\epsilon-h_{c}\right)^{2}D}\right]^{n}
\end{cases}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
A derivada da força permeante 
\begin_inset Formula $\left(F_{P}\right)$
\end_inset

 é dada pelo procedimento abaixo:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
F_{P}=\alpha_{p}\pi r_{s}^{2}\frac{1}{2}\rho_{s}V_{f}^{2}\frac{24}{Re}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dF_{P}}{dh_{c}}=24\alpha_{p}\pi r_{s}^{2}\frac{1}{2}\rho_{s}\frac{d}{dh_{c}}\left(V_{f}^{2}Re^{-1}\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{dF_{P}}{dh_{c}}=24\alpha_{p}\pi r_{s}^{2}\frac{1}{2}\rho_{s}\left[2V_{f}Re^{-1}\frac{dV_{f}}{dh_{c}}+V_{f}^{2}\left(-1\right)Re^{-2}\frac{dRe}{dh_{c}}\right]
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Derivada de 
\begin_inset Formula $Re:$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
Re=\frac{2^{n}r_{s}^{n}V_{f}^{2-n}\rho_{f}}{3^{n-1}\eta}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dRe}{dh_{c}}=\frac{2^{n}r_{s}^{n}\rho_{f}}{3^{n-1}\eta}\left(2-n\right)V_{f}^{1-n}\frac{dV_{f}}{dh_{c}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dRe}{dh_{c}}=\frac{2^{n}r_{s}^{n}\rho_{f}}{3^{n-1}\eta}\left(2-n\right)\frac{V_{f}}{V_{f}}V_{f}^{1-n}\frac{dV_{f}}{dh_{c}}=Re\frac{\left(2-n\right)}{V_{f}}\frac{dV_{f}}{dh_{c}}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dF_{P}}{dh_{c}}=24\alpha_{p}\pi r_{s}^{2}\frac{1}{2}\rho_{s}\left\{ 2V_{f}Re^{-1}\frac{dV_{f}}{dh_{c}}+V_{f}^{2}\left(-1\right)Re^{-2}\left[Re\frac{\left(2-n\right)}{V_{f}}\frac{dV_{f}}{dh_{c}}\right]\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dF_{P}}{dh_{c}}=24\alpha_{p}\pi r_{s}^{2}\frac{1}{2}\rho_{s}\left\{ 2V_{f}Re^{-1}\frac{dV_{f}}{dh_{c}}-V_{f}Re^{-1}\left(2-n\right)\frac{dV_{f}}{dh_{c}}\right\} 
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{dF_{P}}{dh_{c}}=24\alpha_{p}\pi r_{s}^{2}\frac{1}{2}\rho_{s}\frac{n}{Re}V_{f}\frac{dV_{f}}{dh_{c}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Derivada de 
\begin_inset Formula $V_{f}:$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
V_{f}=\frac{kk_{c}\Delta P_{Transversal}}{\mu_{Fitrado}\left(k_{c}\frac{D-\epsilon}{2}+h_{c}k\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dV_{f}}{dh_{c}}=\frac{kk_{c}\Delta P_{Transversal}}{\mu_{Fitrado}}\frac{d}{dh_{c}}\left(k_{c}\frac{D-\epsilon}{2}+h_{c}k\right)^{-1}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dV_{f}}{dh_{c}}=\frac{kk_{c}\Delta P_{Transversal}}{\mu_{Fitrado}}\left(-1\right)\left(k_{c}\frac{D-\epsilon}{2}+h_{c}k\right)^{-2}\left(k\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dV_{f}}{dh_{c}}=-V_{f}\frac{k}{\left(k_{c}\frac{D-\epsilon}{2}+h_{c}k\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dF_{P}}{dh_{c}}=24\alpha_{p}\pi r_{s}^{2}\frac{1}{2}\rho_{s}\frac{n}{Re}V_{f}\left[-V_{f}\frac{k}{\left(k_{c}\frac{D-\epsilon}{2}+h_{c}k\right)}\right]
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\frac{dF_{P}}{dh_{c}}=-F_{P}\frac{nk}{\left(k_{c}\frac{D-\epsilon}{2}+h_{c}k\right)}
\]

\end_inset


\end_layout

\begin_layout Standard
Por fim, a derivada do torque resultante 
\begin_inset Formula $\left(T_{r}\right)$
\end_inset

 é:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
T_{r}\equiv F_{D}-f\left(F_{G}+F_{P}\right)=0
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{dT_{r}}{dh_{c}}\equiv\frac{dF_{D}}{dh_{c}}-f\frac{dF_{P}}{dh_{c}}=0
\end{equation}

\end_inset


\end_layout

